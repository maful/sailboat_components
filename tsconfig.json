{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "module": "es2020",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "declarationDir": "./app/components/sailboat",
    "strict": false,
    "baseUrl": ".",
    "types": [],
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "app/components/sailboat/*.ts",
  ],
  "exclude": [
    "demo/**/*",
    "vendor/**/*"
  ]
}
